<Window x:Class="RsmgrImporter.PopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RsmgrImporter"
        mc:Ignorable="d"
        Title="PopUp" Height="300" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label x:Name="lblMessage" Content="Message: " />
            <TextBlock x:Name="txtResult" Text="Message Content..." HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        </StackPanel>
    </Grid>
</Window>
